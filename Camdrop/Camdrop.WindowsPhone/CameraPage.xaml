<Page
    x:Class="Camdrop.CameraPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Camdrop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#FF000000"
    DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid x:Name="LayoutRoot" Margin="0,0,0,0">

        <Image x:Name="imgCameraFeed" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />

        <StackPanel Background="#88000000" VerticalAlignment="Bottom" Margin="0,0,0,0">
            <TextBlock x:Name="txtTimestamp" FontSize="{StaticResource TextStyleLargeFontSize}" FontFamily="{StaticResource PhoneFontFamilyNormal}" Foreground="#FF00B0ED" HorizontalAlignment="Center" Margin="5,5,5,5" />
        </StackPanel>
        
    </Grid>
</Page>
